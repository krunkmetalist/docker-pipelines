// pipeline test for docker agents.

pipeline {
    agent {
        docker {
            image 'node:16-alpine'
            label 'gen8'
            args '-v C:/jenkins/workspace/docker-pipelines:/workspace'
        }
    }
    options {
        buildDiscarder(
            logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10')
        )
    }
    triggers {
        // every five minutes, look for changes.
        pollSCM('*/5 * * * *')
    }
    stages {
        stage('test docker') {
            steps {
                sh 'printenv'
            }
        }
        stage('echo node version') {
            steps {
                sh 'node --version'
            }
        }
    }
}