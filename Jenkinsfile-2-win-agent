// pipeline test for docker agents.

pipeline {
    agent {
        docker { image '<newNameHere>' }
    }
    options {
        buildDiscarder(
            logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10')
        )
    }
    triggers {
        // every five minutes, look for changes.
        pollSCM('*/5 * * * *')
    }
    stages {
        stage('test docker') {
            steps {
                echo 'show all env vars...'
                sh 'printenv'
            }
        }
        stage('echo node version') {
            steps {
                ehco 'node version...'
                sh 'node --version'
            }
        }
    }
}